%h1 Edit Information

.row
  .col-md-6.col-md-offset-3
    = form_for(:user, url: user_path, method: :patch) do |f|
      = f.label :name, "名前"
      = f.text_field :name, class: 'form-control'
      = f.label :gender, "性別"
      = f.text_field :gender, class: 'form-control'
      = f.label :age, "年齢"
      = f.text_field :age, class: 'form-control'
      = f.label :other_information, "自己紹介"
      = f.text_area :other_information, class: 'form-control textarea'
      教えられるスキル
      = f.fields_for :teach_skills_attributes do |teach_skill|
        - Skill.all.each do |skill|
          = text_field_tag 'user[teach_skills_attributes][][skill_id]'
      学びたいスキル
      = f.fields_for :learn_skills_attributes do |learn_skill|
        - Skill.all.each do |skill|
          = text_field_tag 'user[learn_skills_attributes][][skill_id]'
